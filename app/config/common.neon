parameters:
    privateKeyFile: ../app/keys/rsa_A4292qDdPE.key
#    privateKeyFile: ../app/keys/certificate.pem
#    bankPublicKeyFile: ../app/keys/public.pub
    bankPublicKeyFile: ../app/keys/rsa_A4292qDdPE.pub

application:
	errorPresenter: Error
	mapping:
		*: App\*Module\Presenters\*Presenter


session:
	expiration: 14 days


database:
	dsn: 'mysql:host=127.0.0.1;dbname=test'
	user:
	password:
	options:
		lazy: yes


services:
	- App\Model\UserManager
	- App\Forms\FormFactory
	- App\Forms\SignInFormFactory
	- App\Forms\SignUpFormFactory
	- App\Presenters\HomepagePresenter(%privateKeyFile%, %bankPublicKeyFile%)
	router: App\Router\RouterFactory::createRouter
